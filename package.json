{
  "name": "vite-plugin-svelte-svg",
  "version": "0.9.0",
  "description": "Vite plugin for SVG handling in Svelte projects with dynamic color and size support",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./runtime": {
      "types": "./src/runtime/index.ts",
      "import": "./src/runtime/index.ts"
    },
    "./runtime/Svg.svelte": {
      "types": "./src/runtime/Svg.svelte.d.ts",
      "svelte": "./src/runtime/Svg.svelte"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup && node -e \"require('fs').cpSync('src/runtime/Svg.svelte', 'dist/runtime/Svg.svelte'); require('fs').cpSync('src/runtime/Svg.svelte.d.ts', 'dist/runtime/Svg.svelte.d.ts')\"",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "vite": "^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "glob": "^11.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "svelte": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "svelte",
    "svg"
  ],
  "license": "MIT"
}
